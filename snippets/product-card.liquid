<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden relative group">
    <a href="{{product_product.url}}" class="block group-hover:scale-105 transition-transform duration-300">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-full object-cover"
            src="{{ product_product.featured_image | img_url: 'medium' }}"
            alt="{{ product_product.featured_image.alt }}"
            width="300"
            height="300"
          >
        </div>
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
      {% endif %}
    </a>

    <div class="flex justify-between items-center p-4">
      <div class="flex flex-col">
        <span class="text-sm text-gray-500 block">{{ product_product.vendor }}</span>

        <a class="text-gray-700 uppercase font-medium group-hover:text-blue-600" href="{{ product_product.url }}">
          {{- product_product.title -}}
        </a>

        <p class="text-gray-500 ">{{ product_product.price | money }}</p>
      </div>
      <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-end">
        <a
          href="{{product_product.url}}"
          class="text-blue-600 text-3xl font-bold transform translate-x-0 group-hover:translate-x-2 transition-transform duration-300"
          >â†’</a
        >
      </div>
    </div>
  </div>
</div>
